	"item": [
		{
			"name": "users",
			"item": [
				{
					"name": "Create a new user",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const body = JSON.parse(pm.request.body.raw);\r",
									"\r",
									"if (!body.age || body.age < 18) {\r",
									"    throw new Error(\"Validation failed: age must be 18 or above.\");\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {\r",
									"  pm.response.to.have.status(201);\r",
									"});\r",
									"\r",
									"pm.test(\"Validate response has required fields\", function () {\r",
									"    const jsonData = pm.response.json();\r",
									"\r",
									"    pm.expect(jsonData).to.have.property(\"user\");\r",
									"\r",
									"    const user = jsonData.user;\r",
									"    pm.expect(user).to.have.property(\"name\");\r",
									"    pm.expect(user).to.have.property(\"email\");\r",
									"    pm.expect(user.age).to.be.above(17);\r",
									"});\r",
									"\r",
									"const schema = {\r",
									"  type: \"object\",\r",
									"  required: [\"user\"],\r",
									"  properties: {\r",
									"    user: {\r",
									"      type: \"object\",\r",
									"      required: [\"name\", \"email\", \"age\"],\r",
									"      properties: {\r",
									"        name: { type: \"string\" },\r",
									"        email: { type: \"string\", format: \"email\" },\r",
									"        age: { type: \"integer\", minimum: 18 }\r",
									"      }\r",
									"    }\r",
									"  }\r",
									"};\r",
									"\r",
									"pm.test(\"Validate response schema\", function () {\r",
									"  pm.expect(tv4.validate(pm.response.json(), schema)).to.be.true;\r",
									"});\r",
									"\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"shan\",\n    \"email\": \"shan@gmail.com\",\n    \"age\": 23,\n    \"phone\": \"1234567890\"\n}",
							"options": {
								"raw": {
									"headerFamily": "json",
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/users"
					},
